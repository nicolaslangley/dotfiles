[include]
	path = ~/.gitconfig.local
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
	trustctime = false
	excludesfile = ~/.gitignore_global
	# Performance optimizations for large repositories
	fsmonitor = true
	preloadindex = true
	untrackedCache = true
[rebase]
	autosquash = true
[gc]
	autoDetach = false
	# Optimize pack files for better performance
	writeCommitGraph = true
[fetch]
	# Reduce network overhead
	prune = true
	pruneTags = true
[status]
	showUntrackedFiles = normal
	# Use untracked file cache
	aheadBehind = true
[maintenance]
	auto = true
	strategy = incremental
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[difftool "smerge"]
	cmd = smerge \"$BASE\" \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = smerge
[mergetool "smerge"]
	cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true
[merge]
	tool = smerge
[init]
	defaultBranch = main
